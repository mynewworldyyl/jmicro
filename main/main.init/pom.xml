<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
         <groupId>cn.jmicro</groupId>
		 <artifactId>main</artifactId>
		 <version>0.0.2-SNAPSHOT</version>
    </parent>
    <artifactId>main.init</artifactId>
    <packaging>jar</packaging>
    <name>${project.artifactId}</name>
    <description>init deployment</description>
	<dependencies>
		<dependency>
			 <groupId>cn.jmicro</groupId>
			 <artifactId>api</artifactId>
	    </dependency>
	     <dependency>
			 <groupId>cn.jmicro</groupId>
			 <artifactId>redis</artifactId>
	    </dependency>
	    <dependency>
			 <groupId>cn.jmicro</groupId>
			 <artifactId>zk</artifactId>
	    </dependency>
	    <dependency>
			 <groupId>cn.jmicro</groupId>
			 <artifactId>objfactory.simple</artifactId>
	    </dependency>
	   <dependency>
			<groupId>cn.jmicro</groupId>
			<artifactId>choreography.api</artifactId>
		</dependency>
	     <dependency>
			 <groupId>cn.jmicro</groupId>
			 <artifactId>idgenerator</artifactId>
	    </dependency>  
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<archive>
						<manifest>
							<mainClass>cn.jmicro.cmd.InitJmicroEnv</mainClass>
						</manifest>
					</archive>
					<descriptorRefs>
						<descriptorRef>jar-with-dependencies</descriptorRef>
					</descriptorRefs>
				</configuration>
				<executions>
					<execution>
						<id>make-assembly</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>